<div class="accordion" id="accordionExample">
  <div class="accordion-item">
    <h2 class="accordion-header" id="headingOne">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
        <b style="white-space: pre">Pop Quiz: </b><div><%= @pop_quiz.first.question %> <%= @pop_quiz.first.image.attached? ? "<br>".html_safe + image_tag(@pop_quiz.first.image.url, class: "img-fluid") : '' %>
        <%= @pop_quiz.first.question_types.intersect?(%w[multichoice veracity]) ? "<br>#{@pop_quiz.first.answer.union(@pop_quiz.first.choices.map(&:texts)).shuffle.join('<br>')}".html_safe : '' %>
      </div></button>
    </h2>
    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
      <div class="accordion-body">
       <%= @pop_quiz.first.question_types.intersect?(%w[multichoice caption veracity]) ? @pop_quiz.first.answer.shuffle.join(' & ') : @pop_quiz.first.answer.sample %>
      </div>
    </div>
  </div><br>
</div>