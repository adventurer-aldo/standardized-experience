    <%=link_to '/quiz' do %>
        <li id='nav-li-Practice' class='li-result'><%=fa_icon 'align-left'%> <span class='erasable'>Practice</span></li>
    <% end %>

    <%=link_to '/about' do %>
        <li id='nav-li-About' class='li-result'><%=fa_icon 'question'%> <span class='erasable'>About</span></li>
    <% end %>

    <li id='nav-li-Time' class='li-result time li-right'><%= @duration.min %>m <%= @duration.sec %>s</li>
</ul></div>
<div id='page'><div style='padding: 30px'>
    <%= render "format-#{@currentQuiz.format}"%>

    <% @questionObjects.each do |question| %>
        <p><% 
        @ans = @answerObjects[@questionObjects.index(question)]
        @parameters = eval(@ans.parameters)
        if question.answer.split('|') == @ans.attempt.split('|')
            %><span class='grade'><%=%><%=@ans.grade%></span><%
        else
            %><span class='grade'><%=%>0,0%></span><%
        end
        %><b><%=(@questionObjects.index(question) + 1 ).to_s + '. ' %></b> <%= question.question.html_safe %><br><%

        case @parameters[:type]
        when :open 
            %><b>R: </b><%= @ans.attempt %></p><%

        when :choice
            @question = question
            order_choices
            @choices.each do |choice|
                %><b>• </b><%= choice.html_safe %><br><%
            end

        when :multichoice
            @question = question
            order_choices
            @choices.each do |choice|
                %><b>• </b><%= choice.html_safe %><br><%
            end

        when :veracity
            @question = question
            order_choices
            @choices.each do |choice|
                %><b>• </b><%= choice.html_safe %><br><%
            end

        when :caption
            %><b>R: </b><% @ans.attempt.split('|').each do |str|
                %><%= str %><br><%
            end %></p><%

        when :table

        when :formula

        end
        
    end %>
</div></div>