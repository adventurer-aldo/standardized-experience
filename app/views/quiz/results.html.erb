        case @parameters[:type]
        when :open 
            %><b>R: </b><%= @ans.attempt %></p><%

        when :choice
            @question = question
            order_choices
            @choices.each do |choice|
                %><b>â€¢ </b><%= choice %><br><%
            end

        when :multichoice

        when :veracity

        when :caption

        when :table

        when :formula

        end
        
    end %>
