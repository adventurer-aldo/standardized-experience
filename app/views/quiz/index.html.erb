<%= render "navbar"%><head><title><%=@quiz.subject.title %> | <%=@test_name[@quiz.level]%></title></head><div id='page'><div style='padding: 30px'>
    <%= render "format-#{@format}"%>

<audio autoplay='autoplay' loop='loop' id="bgm" preload="auto">
    <source src="<%=@ost[0]%>" type="audio/ogg">
</audio>
<%= form_with id: :quiz, html: { autocomplete: 'off' } do |form| %>
    <%= form.hidden_field :quizID, value: @quiz.id.to_s %>
    <% @quiz.answers.each_with_index do |answer, index| %>
    <p><b><%= index + 1 %>.</b><%= answer.question %></p>
    <%= input_answer(answer) %>
    <% end %>
    <%= form.submit 'Entregar Teste', class: 'btn btn-success m-auto' %>
<% end %>