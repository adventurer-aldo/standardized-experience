            <div class="input-group mb-3">
              <span class="input-group-text">Name</span>
              <input type="text" name="first_name" id="first_name" class="form-control" placeholder="Name" aria-label="Username" style="font-family: 'Homemade Apple', cursive;color: blue;">
              <span class="input-group-text">Code</span>
              <input type="text" name="last_name" id="last_name" class="form-control" placeholder="Code" aria-label="Server" style="font-family: 'Homemade Apple', cursive;color: blue;">
            </div>
        <% else %>
            <div class="input-group mb-3">
              <span class="input-group-text">Name</span>
              <span type="text" name="first_name" id="first_name" class="form-control" placeholder="Name" aria-label="Username" style="font-family: 'Homemade Apple', cursive;color: blue;"><%= @quiz.first_name %></span>
              <span class="input-group-text">Code</span>
              <span type="text" name="last_name" id="last_name" class="form-control" placeholder="Code" aria-label="Server" style="font-family: 'Homemade Apple', cursive;color: blue;"><%= @quiz.last_name %></span>
            </div>
        <% end%>
    <% end %>
 </p>