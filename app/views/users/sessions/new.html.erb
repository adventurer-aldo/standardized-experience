<head><title>Iniciar sessão | SE</title></head>
<%= render "shared/header" %>
<%= render "users/shared/links" %>
<div class="form-signin text-bg-light p-3 mx-auto page">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, class: 'form-control', autocomplete: "email" %>
      <%= f.label :email, "Email" %>
    </div>
    <div class="form-floating">
      <%= f.password_field :password, class: 'form-control', autocomplete: "current-password" %>
      <%= f.label :password, "Palavra passe" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, 'Lembre-me', class: "form-check-label" %>
      </div>
    <% end %>

    <div class="actions text-center">
      <%= f.submit "Iniciar sessão", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<%= render "shared/footer" %>